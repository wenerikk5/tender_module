<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_lot_tree" model="ir.ui.view">
        <field name="name">tender.lot.tree</field>
        <field name="model">tender.lot</field>
        <field name="arch" type="xml">
            <tree>
                <field name="external_id"/>
                <field name="name"/>
                <field name="status"/>
                <field name="reason"/>
                <field name="procedure_id"/>
            </tree>
        </field>
    </record>

    <record id="view_lot_form" model="ir.ui.view">
        <field name="name">tender.lot.form</field>
        <field name="model">tender.lot</field>
        <field name="arch" type="xml">
            <form edit="0">
                <sheet>
                    <group>
                        <field name="external_id"/>
                        <field name="name"/>
                        <field name="status"/>
                        <field name="reason"/>
                        <field name="procedure_id"/>
                    </group>
                    <notebook>
                        <page string="Участники">
                            <field name="participant_ids">
                                <tree editable="false" create="true">
                                    <field name="place"/>
                                    <field name="name"/>
                                    <field name="address"/>
                                    <field name="inn"/>
                                    <field name="price"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>