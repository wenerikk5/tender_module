<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_import_wizard_form" model="ir.ui.view">
        <field name="name">tender.import.wizard.form</field>
        <field name="model">tender.import.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="inn"/>
                    <field name="published_from"/>
                </group>
                <footer>
                    <button name="action_import" string="Import" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_import_wizard" model="ir.actions.act_window">
        <field name="name">Импорт торговых процедур</field>
        <field name="res_model">tender.import.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
